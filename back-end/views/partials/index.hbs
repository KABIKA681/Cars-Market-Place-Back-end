
<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>ALL ARTICLE</h1>
            
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
               <div class="row"> 
                <div class="col-8">
                     <input type="file" class="form-control" name="images" id="formFile" multiple>
                        </div>
                        <div class="col-2">
                            <input type="submit" class="btn btn-outline-dark" value="Upload Image">
                        </div>
                    </div>
                </form> 
                </div>
            </div>
            <section class="mt-5">
                <div class="row">
                    
                        {{#each images}}
                            {{#each this}}
                            {{#if imageBase64}}
                                 <div class="col-3">
                                     <div class="card" style="width: 18rem;">
                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                            <div class="card-body">
                             
                                            <h5 class="card-title font-poppins">New Brand Car</h5>
                                            <p class="text-secondary font-size-09">This is a brand new car bought from ASIA, CHINA & USA.</p>
                                        <a href="#" class="btn btn-outline-dark font-size-09">Vehicle details</a>
                                         </div>
                                     </div>
                                 </div>
                                {{/if}}
                            {{/each}}
                        {{/each}}
                        
                    
                </div>

            </section>

        </div>
        
</section>